/**
 * SEO.jsx — Meta tag management for AeroAdix
 * 
 * Usage:
 *   import SEO from './components/SEO';
 *   
 *   // In any page/section component:
 *   <SEO 
 *     title="Custom Aero Kits"
 *     description="Bespoke aerodynamic body kits engineered for your vehicle."
 *     path="/products"
 *   />
 * 
 * Install: npm install react-helmet-async
 */

import { Helmet } from 'react-helmet-async';

const SITE_NAME = 'AeroAdix';
const SITE_URL = 'https://aeroadix.com';
const DEFAULT_TITLE = 'AeroAdix | Bespoke Automotive Aerodynamics';
const DEFAULT_DESCRIPTION = 
  'AeroAdix Fabrication Solutions — custom aerodynamic body kits, splitters, diffusers, and CFD-optimized components. Precision-engineered for performance vehicles.';
const DEFAULT_IMAGE = `${SITE_URL}/assets/aeroadix-og.jpg`; // Create a 1200x630 OG image

export default function SEO({ 
  title, 
  description = DEFAULT_DESCRIPTION, 
  path = '/',
  image = DEFAULT_IMAGE,
  type = 'website'
}) {
  const pageTitle = title ? `${title} | ${SITE_NAME}` : DEFAULT_TITLE;
  const canonicalUrl = `${SITE_URL}${path}`;

  return (
    <Helmet>
      {/* Primary Meta Tags */}
      <title>{pageTitle}</title>
      <meta name="description" content={description} />
      <link rel="canonical" href={canonicalUrl} />

      {/* Open Graph / Facebook */}
      <meta property="og:type" content={type} />
      <meta property="og:url" content={canonicalUrl} />
      <meta property="og:title" content={pageTitle} />
      <meta property="og:description" content={description} />
      <meta property="og:image" content={image} />
      <meta property="og:site_name" content={SITE_NAME} />

      {/* Twitter Card */}
      <meta name="twitter:card" content="summary_large_image" />
      <meta name="twitter:url" content={canonicalUrl} />
      <meta name="twitter:title" content={pageTitle} />
      <meta name="twitter:description" content={description} />
      <meta name="twitter:image" content={image} />

      {/* Additional SEO */}
      <meta name="robots" content="index, follow" />
      <meta name="theme-color" content="#0a0a0a" />
    </Helmet>
  );
}